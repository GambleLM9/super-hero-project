<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add superhero</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2 class="card-title mb-0">
                <i class="bi bi-person-badge me-2"></i>
                Add Superhero
            </h2>
        </div>
        <div class="card-body">
            <form id="hero-form">
                <%- include('partials/form-input', superName)%>
                <%- include('partials/form-input', realName)%>
                <%- include('partials/form-input', superpower)%>
                <%- include('partials/form-input', powerLevel)%>

              <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="secretIdentity" name="secretIdentity">
                <label
                class="form-check-label"for="secretIdentity">Has Secret Identity</label>
              </div>

              <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="reset" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise me-1"></i>Reset
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Add Hero
                </button>
              </div>
            </form>
        </div>
    </div>
</div>
<script src="/js/validation.js"></script>
</body>
</html>